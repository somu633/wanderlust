<% layout("/layouts/boilerplate") %>
    <div class="row mt-3">
        <div class="col-10 offset-1">
            <h3 class="mb-4">My Bookings</h3>

            <% if(allBookings && allBookings.length> 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover border shadow-sm align-middle">
                        <thead class="table-dark">
                            <tr>
                                <th>Property</th>
                                <th>Check-In</th>
                                <th>Check-Out</th>
                                <th>Total Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let booking of allBookings) { %>
                                <tr>
                                    <td>
                                        <%= booking.listing ? booking.listing.title : "Listing Deleted" %>
                                    </td>

                                    <td>
                                        <%= booking.checkIn ? booking.checkIn.toDateString() : "N/A" %>
                                    </td>

                                    <td>
                                        <%= booking.checkOut ? booking.checkOut.toDateString() : "N/A" %>
                                    </td>

                                    <td>
                                        &#8377; <%= booking.totalPrice ? booking.totalPrice.toLocaleString("en-IN")
                                            : "0" %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
                <% } else { %>
                    <div class="alert alert-info">
                        <p class="mb-0">No bookings found. Start exploring and book your next stay!</p>
                    </div>
                    <% } %>
        </div>
    </div>