<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-8 offset-3">
        <h3>Your Wishlist</h3>
    </div>
    
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% if(wishlist && wishlist.length > 0) { %>
            <% for(listing of wishlist) { %>
                <div class="col mb-4">
                    <a href="/listings/<%= listing._id %>" class="listing-link">
                        <div class="card listing-card h-100">
                            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 18rem">
                            <div class="card-body">
                                <p class="card-text">
                                    <b><%= listing.title %></b> <br>
                                    &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                                </p>
                            </div>
                        </div>
                    </a>
                    
                    <form action="/listings/<%= listing._id %>/wishlist" method="POST" class="mt-2">
                        <button class="btn btn-sm btn-outline-dark w-100">
                            <i class="fa-solid fa-trash-can"></i> Remove from Wishlist
                        </button>
                    </form>
                </div>
            <% } %>
        <% } else { %>
            <div class="col-8 offset-3 text-center mt-5">
                <i class="fa-regular fa-heart fa-5x mb-3 text-muted"></i>
                <p class="fs-4">Your wishlist is empty.</p>
                <a href="/listings" class="btn btn-danger rounded-pill px-4">Explore Listings</a>
            </div>
        <% } %>
    </div>
</div>